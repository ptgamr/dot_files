bindsym XF86Launch9 exec "redshift -P -O 6000"

bindsym XF86AudioNext exec "redshift -P -O 5000"
bindsym XF86AudioPrev exec "redshift -P -O 3500"
bindsym XF86AudioStop exec "redshift -P -O 6500"

